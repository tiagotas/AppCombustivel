<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCombustivel.MainPage">

    <StackLayout>
        <Label Text="Informe o Preço do Etanol: " />
        <Entry x:Name="txt_etanol" Keyboard="Numeric" />

        <Label Text="Informe o Preço do Gasolina: " />
        <Entry x:Name="txt_gasolina" Keyboard="Numeric" />

        <Button Text="Calcular" Clicked="Button_Clicked" />
    </StackLayout>

</ContentPage>
